{
  "name": "Chrome React Tabs Extension",
  "description": "Tab management extension for Google Chrome",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
      "default_popup": "index.html",
      "default_title": "Open the popup"
  },
  "icons": {
      "16": "plant-icon.png",
      "48": "plant-icon.png",
      "128": "plant-icon.png"
  },
  "content_scripts": [
    {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["./static/js/content.js"]
    }
  ],
  "permissions": [
    "activeTab"
 ]
}